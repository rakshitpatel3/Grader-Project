<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
 <%= render "devise/shared/error_messages", resource: resource %>


 <div class="field email-container">
   <%= f.label :email %><br />
   <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'yourname.#@osu.edu', class: "email-input" %>
 </div>

 <div class="field">
   <%= f.label :name %><br />
   <%= f.text_field :name, placeholder: "Name" %>
 </div>


 <div class="field password-container">
  <%= f.label :password %>
  <% if @minimum_password_length %>
  <% end %><br />
  <div class="password-wrapper" style="position: relative;">
    <%= f.password_field :password, id: "password", autocomplete: "new-password", class: "password-input", placeholder: "Password (6 characters minimum)" %>
    <span class="show-password" onclick="togglePassword()">Show</span>
  </div>
</div>

<div class="field password-container">
  <%= f.label :password_confirmation %><br />
  <div class="password-wrapper">
    <%= f.password_field :password_confirmation, id: "password_confirmation", autocomplete: "new-password", class: "password-confirmation-input", placeholder: "Confirm Password" %>
    <span class="show-password-confirmation" onclick="togglePasswordConfirmation()">Show</span>
  </div>
</div>


<div class="field">
   <%= f.label :role %><br />
   <%= f.select :role, options_for_select([['Student', 'Student'], ['Instructor', 'Instructor'], ['Admin', 'Admin']]), { include_blank: 'Select a role' }, { required: true } %>
 </div>

 <div class="actions">
   <%= f.submit "Sign up", class: "btn" %>
 </div>
<% end %>

<%= render "devise/shared/links" %>
