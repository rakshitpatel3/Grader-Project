<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field email-container">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "email", class: "email-input", placeholder: 'yourname.#@osu.edu' %>
  </div>

  <div class="field password-container">
  <%= f.label :password %><br />
  <div class="password-wrapper" style="position: relative;">
    <%= f.password_field :password, id: "password", autocomplete: "current-password", class: "password-input",  placeholder: 'Password' %>
    <span class="show-password" onclick="togglePassword('login_password')">Show</span>
  </div>
</div>

 <% if devise_mapping.rememberable? %>
   <div class="field">
     <%= f.check_box :remember_me %>
     <%= f.label :remember_me %>
   </div>
 <% end %>

 <div class="actions">
   <%= f.submit "Log in" %>
 </div>
<% end %>

<%= render "devise/shared/links" %>
